on:
  issues:
    types: [opened]

jobs:
  add-to-project:
    runs-on: ubuntu-latest
    steps:
      - name: Add issue to project
        uses: actions/add-to-project@v0
        with:
          project-url: https://github.com/users/johnboyce/projects/1
          github-token: ${{ secrets.YOUR_PAT }}
